<Window x:Class="CertificateGenerator.ParticipantDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Účastník" 
        MinHeight="480" 
        Width="500"
        FontSize="14"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{StaticResource BackgroundColor}">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Style="{StaticResource Card}" 
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="👤" 
                           FontSize="36"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"/>
                <TextBlock Text="Údaje účastníka" 
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryColor}"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Name -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <Label Content="Meno a priezvisko *" 
                   Style="{StaticResource ModernLabel}"
                   FontWeight="Bold"
                   Foreground="{StaticResource PrimaryColor}"/>
            <TextBox x:Name="TxtName" 
                     Style="{StaticResource ModernTextBox}"
                     Background="{StaticResource InputBackground}"/>
        </StackPanel>

        <!-- Birth Date -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <Label Content="Dátum narodenia" 
                   Style="{StaticResource ModernLabel}"/>
            <DatePicker x:Name="DtpBirthDate" 
                        Style="{StaticResource ModernDatePicker}"
                        SelectedDateFormat="Short"/>
        </StackPanel>

        <!-- Registration Number -->
        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <Label Content="Registračné číslo v komore" 
                   Style="{StaticResource ModernLabel}"/>
            <TextBox x:Name="TxtRegistrationNumber" 
                     Style="{StaticResource ModernTextBox}"/>
        </StackPanel>

        <!-- Notes -->
        <StackPanel Grid.Row="4" Margin="0,0,0,20">
            <Label Content="Poznámky" 
                   Style="{StaticResource ModernLabel}"/>
            <TextBox x:Name="TxtNotes" 
                     Style="{StaticResource ModernTextBox}"
                     Height="100"
                     TextWrapping="Wrap" 
                     AcceptsReturn="True" 
                     VerticalScrollBarVisibility="Auto"
                     Padding="12,10"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center">
            <Button Content="✓ Uložiť" 
                    Style="{StaticResource SuccessButton}"
                    Width="140"
                    Height="44"
                    FontSize="14"
                    FontWeight="Bold"
                    Margin="0,0,15,0"
                    IsDefault="True"
                    Click="Save_Click"/>
            <Button Content="✖️ Zrušiť" 
                    Style="{StaticResource SecondaryButton}"
                    Width="120"
                    Height="44"
                    FontSize="14"
                    IsCancel="True"
                    Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>