<Window x:Class="CertificateGenerator.SaveNewTopicWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CertificateGenerator"
        mc:Ignorable="d"
        Title="Nová téma podujatia" 
        Height="680" 
        Width="500"
        FontSize="14"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundColor}">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Style="{StaticResource Card}" 
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Pridať novú tému podujatia" 
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryColor}"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Topic Name -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <Label Content="Názov témy *" 
                   Style="{StaticResource ModernLabel}"
                   FontWeight="Bold"
                   Foreground="{StaticResource PrimaryColor}"/>
            <TextBox x:Name="TxtTopicName" 
                     Style="{StaticResource ModernTextBox}"
                     Background="{StaticResource InputBackground}"/>
        </StackPanel>

        <!-- Description -->
        <StackPanel Grid.Row="2" Margin="0,0,0,20">
            <Label Content="Popis (voliteľné)" 
                   Style="{StaticResource ModernLabel}"/>
            <TextBox x:Name="TxtDescription" 
                     Style="{StaticResource ModernTextBox}"
                     Height="100"
                     TextWrapping="Wrap" 
                     AcceptsReturn="True" 
                     VerticalScrollBarVisibility="Auto"
                     Padding="12,10"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center">
            <Button Content="✓ Pridať" 
                    Style="{StaticResource SuccessButton}"
                    Width="140"
                    Height="44"
                    FontSize="14"
                    FontWeight="Bold"
                    Margin="0,0,15,0"
                    IsDefault="True"
                    Click="Add_Click"/>
            <Button Content="✖️ Zrušiť" 
                    Style="{StaticResource SecondaryButton}"
                    Width="120"
                    Height="44"
                    FontSize="14"
                    IsCancel="True"
                    Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
