<Window x:Class="CertificateGenerator.TemplateGalleryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Galéria šablón certifikátov"
        Height="700" 
        Width="1100"
        MinHeight="600"
        MinWidth="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="{StaticResource BackgroundColor}">

    <Window.Resources>
        <!-- Štýl pre kartu šablóny -->
        <Style x:Key="TemplateCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#3B82F6"/>
                    <Setter Property="BorderThickness" Value="2"/>
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                               To="1.02" Duration="0:0:0.15"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                               To="1.02" Duration="0:0:0.15"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                               To="1.0" Duration="0:0:0.15"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                               To="1.0" Duration="0:0:0.15"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Štýl pre kategóriu -->
        <Style x:Key="CategoryBadge" TargetType="Border">
            <Setter Property="Background" Value="#DBEAFE"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="30,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Hlavička -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Vyberte si profesionálnu šablónu certifikátu alebo si vytvorte vlastnú"
                       FontSize="14"
                       Foreground="{StaticResource TextSecondaryColor}"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Filter kategórií -->
        <Border Grid.Row="1" 
                Background="White"
                BorderBrush="#E5E7EB"
                BorderThickness="1"
                CornerRadius="8"
                Padding="15"
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="🏷️ Kategórie:"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextSecondaryColor}"
                           Margin="0,0,0,10"/>
                <WrapPanel x:Name="CategoryFilter">
                    <RadioButton Content="Všetky" 
                                 GroupName="Category"
                                 IsChecked="True"
                                 Margin="0,0,15,0"
                                 Checked="CategoryFilter_Changed"/>
                    <RadioButton Content="Moderný" 
                                 GroupName="Category"
                                 Margin="0,0,15,0"
                                 Checked="CategoryFilter_Changed"/>
                    <RadioButton Content="Luxusný" 
                                 GroupName="Category"
                                 Margin="0,0,15,0"
                                 Checked="CategoryFilter_Changed"/>
                    <RadioButton Content="Profesionálny" 
                                 GroupName="Category"
                                 Margin="0,0,15,0"
                                 Checked="CategoryFilter_Changed"/>
                    <RadioButton Content="Kreatívny" 
                                 GroupName="Category"
                                 Margin="0,0,15,0"
                                 Checked="CategoryFilter_Changed"/>
                    <RadioButton Content="Klasický" 
                                 GroupName="Category"
                                 Margin="0,0,15,0"
                                 Checked="CategoryFilter_Changed"/>
                </WrapPanel>
            </StackPanel>
        </Border>

        <!-- Scrollable galéria šablón -->
        <ScrollViewer Grid.Row="2" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <ItemsControl x:Name="TemplatesItemsControl">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="320" Height="280"
                                RenderTransformOrigin="0.5,0.5"
                                MouseLeftButtonDown="Template_Click"
                                Tag="{Binding}">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>

                            <!-- Dynamický štýl podľa výberu -->
                            <Border.Style>
                                <Style TargetType="Border" BasedOn="{StaticResource TemplateCard}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                            <Setter Property="BorderBrush" Value="#3B82F6"/>
                                            <Setter Property="BorderThickness" Value="3"/>
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <SolidColorBrush Color="#EFF6FF" Opacity="0.5"/>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="140"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Náhľad šablóny -->
                                <Border Grid.Row="0"
                                        Background="#F3F4F6"
                                        CornerRadius="8"
                                        Margin="0,0,0,10">
                                    <Grid>
                                        <!-- Placeholder pre náhľad -->
                                        <Border Background="White"
                                                BorderBrush="#D1D5DB"
                                                BorderThickness="1"
                                                CornerRadius="4"
                                                Margin="15">
                                            <StackPanel VerticalAlignment="Center"
                                                       HorizontalAlignment="Center">
                                                <TextBlock Text="📄"
                                                          FontSize="36"
                                                          HorizontalAlignment="Center"/>
                                                <TextBlock Text="Náhľad"
                                                          FontSize="11"
                                                          Foreground="#9CA3AF"
                                                          HorizontalAlignment="Center"
                                                          Margin="0,5,0,0"/>
                                            </StackPanel>
                                        </Border>

                                        <!-- Ikona výberu - JEDNODUCHÉ RIEŠENIE BEZ KONVERTORA -->
                                        <Border Background="#3B82F6"
                                                Width="30"
                                                Height="30"
                                                CornerRadius="15"
                                                VerticalAlignment="Top"
                                                HorizontalAlignment="Right"
                                                Margin="10"
                                                x:Name="SelectionIndicator">
                                            <TextBlock Text="✓"
                                                      Foreground="White"
                                                      FontWeight="Bold"
                                                      FontSize="16"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                            <!-- Viditeľnosť sa rieši v kóde -->
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                        </Border>
                                    </Grid>
                                </Border>

                                <!-- Informácie o šablóne -->
                                <StackPanel Grid.Row="1">
                                    <!-- Názov a kategória -->
                                    <DockPanel Margin="0,0,0,8">
                                        <Border Style="{StaticResource CategoryBadge}"
                                                DockPanel.Dock="Right">
                                            <TextBlock Text="{Binding Category}"
                                                      FontSize="10"
                                                      Foreground="#1E40AF"
                                                      FontWeight="SemiBold"/>
                                        </Border>
                                        <TextBlock Text="{Binding Name}"
                                                  FontSize="16"
                                                  FontWeight="Bold"
                                                  Foreground="{StaticResource TextPrimaryColor}"
                                                  TextTrimming="CharacterEllipsis"/>
                                    </DockPanel>

                                    <!-- Popis -->
                                    <TextBlock Text="{Binding Description}"
                                              FontSize="12"
                                              Foreground="{StaticResource TextSecondaryColor}"
                                              TextWrapping="Wrap"
                                              Height="40"
                                              TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Tlačidlá akcie -->
        <Border Grid.Row="3"
                BorderBrush="#E5E7EB"
                BorderThickness="0,1,0,0"
                Padding="0,20,0,0"
                Margin="0,20,0,0">
            <StackPanel Orientation="Horizontal"
                       HorizontalAlignment="Right">
                <Button Content="➕ Vytvoriť vlastnú šablónu"
                        Style="{StaticResource SecondaryButton}"
                        Padding="20,12"
                        FontSize="14"
                        Margin="0,0,10,0"
                        Click="CreateCustomTemplate_Click"/>
                <Button Content="✓ Použiť vybranú šablónu"
                        Style="{StaticResource SuccessButton}"
                        Padding="20,12"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Click="UseSelectedTemplate_Click"
                        x:Name="BtnUseTemplate"
                        IsEnabled="False"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
