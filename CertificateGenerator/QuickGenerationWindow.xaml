<Window x:Class="CertificateGenerator.QuickGenerationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rýchle vytvorenie certifikátu"         
        Height="800" 
        MinHeight="400" 
        Width="700"
        MinWidth="705"
        FontSize="14"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="{StaticResource BackgroundColor}">

    <Grid Margin="25,10,25,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nová sekcia - Výber šablóny -->
        <Border Grid.Row="0"
                Style="{StaticResource Card}"
                Margin="0,0,0,15"
                Background="{StaticResource PrimaryColor}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <!--<TextBlock Text="✨ Vybraná šablóna"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="White"
                               Margin="0,0,0,4"/>-->
                    <TextBlock x:Name="TxtSelectedTemplateName"
                               Text="Predvolená šablóna"
                               FontSize="12"
                               Foreground="White"
                               Opacity="0.9"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="🎨 Zmeniť šablónu"
                        Style="{StaticResource SecondaryButton}"
                        Background="White"
                        Foreground="{StaticResource PrimaryColor}"
                        BorderThickness="0"
                        Padding="15,10"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Click="ChangeTemplate_Click"
                        ToolTip="Otvorí galériu moderných šablón"/>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Margin="0,0,0,20">
            <StackPanel>

                <!-- Event Info -->
                <Border Style="{StaticResource Card}" 
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Vyplňte údaje a vygenerujte PDF certifikát" 
                           FontSize="12"
                           Foreground="{StaticResource TextSecondaryColor}"
                           HorizontalAlignment="Left"/>
                        <Label Content="📋 Údaje o podujatí"
                               Style="{StaticResource ModernLabel}"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,10,0,15"/>

                        <!-- Organizer -->
                        <Label Content="Organizátor:" Style="{StaticResource ModernLabel}"/>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="TxtOrganizer" 
                                     Grid.Column="0"
                                     Style="{StaticResource ModernTextBox}"
                                     Margin="0,0,5,0"/>
                            <Button Grid.Column="1"
                                    Content="📋"
                                    Style="{StaticResource SecondaryButton}"
                                    Width="88"   Height="44"
                                    ToolTip="Vybrať uložené"
                                    Click="SelectOrganizer_Click"/>
                        </Grid>

                        <!-- Event Topic -->
                        <Label Content="Téma podujatia:" Style="{StaticResource ModernLabel}"/>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="TxtEventTopic" 
                                     Grid.Column="0"
                                     Style="{StaticResource ModernTextBox}"
                                     Margin="0,0,5,0"/>
                            <Button Grid.Column="1"
                                    Content="📋"
                                    Style="{StaticResource SecondaryButton}"
                                    Width="88"   Height="44"
                                    ToolTip="Vybrať uložené"
                                    Click="SelectEventTopic_Click"/>
                        </Grid>

                        <!-- Event Date -->
                        <Label Content="Dátum podujatia:" Style="{StaticResource ModernLabel}"/>
                        <DatePicker x:Name="DtpEventDate" 
                                    Style="{StaticResource ModernDatePicker}"
                                    SelectedDateFormat="Short"/>
                    </StackPanel>
                </Border>

                <!-- Participant Info -->
                <Border Style="{StaticResource Card}" 
                        Margin="0,0,0,15">
                    <StackPanel>
                        <Label Content="👤 Údaje účastníka"
                               Style="{StaticResource ModernLabel}"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,0,0,15"/>

                        <!-- Participant Name -->
                        <Label Content="Meno a priezvisko *:" Style="{StaticResource ModernLabel}"/>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="TxtParticipantName" 
                                     Grid.Column="0"
                                     Style="{StaticResource ModernTextBox}"
                                     Background="{StaticResource InputBackground}"
                                     Margin="0,0,5,0"/>
                            <Button Grid.Column="1"
                                    Content="📋"
                                    Style="{StaticResource SecondaryButton}"
                                    Width="88"  Height="44"
                                    ToolTip="Vybrať uložené"
                                    Click="SelectParticipant_Click"/>
                        </Grid>

                        <!-- Birth Date -->
                        <Label Content="Dátum narodenia:" Style="{StaticResource ModernLabel}"/>
                        <DatePicker x:Name="DtpBirthDate" 
                                    Style="{StaticResource ModernDatePicker}"
                                    SelectedDateFormat="Short"
                                    Margin="0,0,0,15"/>

                        <!-- Registration Number -->
                        <Label Content="Registračné číslo v komore:" Style="{StaticResource ModernLabel}"/>
                        <TextBox x:Name="TxtRegistrationNumber" 
                                 Style="{StaticResource ModernTextBox}"
                                 Margin="0,0,0,15"/>

                        <!-- Notes -->
                        <Label Content="Poznámky:" Style="{StaticResource ModernLabel}"/>
                        <TextBox x:Name="TxtNotes" 
                                 Style="{StaticResource ModernTextBox}"
                                 Height="80" 
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True" 
                                 VerticalScrollBarVisibility="Auto"
                                 Padding="12,10"/>
                    </StackPanel>
                </Border>

                <!-- Paper Format -->
                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <Label Content="📄 Formát papiera"
                               Style="{StaticResource ModernLabel}"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>
                        <ComboBox x:Name="CmbPaperFormat"
                                  Style="{StaticResource ModernComboBox}"
                                  SelectedIndex="2">
                            <ComboBoxItem Content="A3 (297 × 420 mm)"/>
                            <ComboBoxItem Content="A4 (210 × 297 mm)"/>
                            <ComboBoxItem Content="A5 (148 × 210 mm)"/>
                        </ComboBox>
                        <CheckBox x:Name="ChkLandscape"
                                  Content="Orientácia na šírku (landscape)"
                                  Margin="0,10,0,0"
                                  IsChecked="True"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <Separator  Grid.Row="2" VerticalAlignment="Top" HorizontalContentAlignment="Stretch" Background="gray" Margin="-30,-21,-30,10" />

        <Border Grid.Row="2" Padding="15,5" Background="White" Margin="-25,-15,-25,4" >
            <!-- Action Buttons -->
            <StackPanel  
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <Button Content="📄 Vytvoriť PDF" 
                        Style="{StaticResource SuccessButton}"
                        Padding="8,14"
                        FontSize="15"
                        FontWeight="Bold"
                        Margin="0,0,8,0"
                        Click="GeneratePdf_Click"/>
                <Button Content="🗑️ Vyčistiť" 
                        Style="{StaticResource SecondaryButton}"
                        Padding="20,14"
                        FontSize="15"
                        Margin="0,0,8,0"
                        Click="ClearForm_Click"/>
                <Button Content="Hromadné vytváranie" 
                        Style="{StaticResource ModernButton}"
                        FontSize="15"
                        Margin="0,0,8,0"
                        Click="OpenBulkGenerationWindow" />
                <Button Content="Editor certifikátov" 
                        Style="{StaticResource ModernButton}"
                        FontSize="15"
                        Click="OpenTemplateEditor_Click" />
            </StackPanel>
        </Border>

        <!-- Toast notifikácia -->
        <Border x:Name="ToastNotification"
                Grid.Row="0" Grid.RowSpan="3"
                Background="#F59E0B"
                CornerRadius="12"
                Padding="20,15"
                Margin="20"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                Visibility="Collapsed"
                MaxWidth="500">
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="3" Opacity="0.3" BlurRadius="10"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="ToastIcon"
                           Text="⚠️"
                           FontSize="24"
                           Margin="0,0,12,0"
                           VerticalAlignment="Center"/>
                <TextBlock x:Name="ToastMessage"
                           Text="Správa"
                           FontSize="15"
                           FontWeight="SemiBold"
                           Foreground="White"
                           TextWrapping="Wrap"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
