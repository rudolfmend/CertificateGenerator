<Window x:Class="CertificateGenerator.ParticipantManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Správa účastníkov" 
        Height="700" 
        Width="980"
        FontSize="14"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundColor}">

    <Grid Margin="30,20,30,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header and Search -->
                <Border Grid.Row="0" Style="{StaticResource Card}" Margin="0,0,0,20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0">
                            <TextBlock Text="👥" FontSize="38" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="Správa účastníkov" FontSize="18" FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimaryColor}" HorizontalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Margin="0,15,0,0">
                            <Label Content="🔍 Vyhľadávanie" Style="{StaticResource ModernLabel}"/>
                            <TextBox x:Name="TxtSearch" Style="{StaticResource ModernTextBox}"
                                 TextChanged="TxtSearch_TextChanged"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- DataGrid -->
                <Border Grid.Row="1" Style="{StaticResource Card}" Margin="0,0,0,20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Content="📋 Zoznam účastníkov" Style="{StaticResource ModernLabel}"
                           FontSize="15" FontWeight="Bold" Margin="0,0,0,15"/>

                        <Border Grid.Row="1" BorderThickness="1" BorderBrush="{StaticResource BorderColor}"
                            CornerRadius="6" Background="{StaticResource SurfaceColor}">
                            <DataGrid x:Name="DgParticipants" 
                                  Style="{StaticResource ModernDataGrid}" 
                                  Height="200"
                                  MouseDoubleClick="DgParticipants_MouseDoubleClick"
                                  BorderThickness="0">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Meno" Binding="{Binding Name}" Width="*"/>
                                    <DataGridTextColumn Header="Dátum narodenia" Binding="{Binding BirthDate, StringFormat='dd.MM.yyyy'}" Width="130"/>
                                    <DataGridTextColumn Header="Registračné číslo" Binding="{Binding RegistrationNumber}" Width="150"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                    </Grid>
                </Border>

                <!-- Form -->
                <Border Grid.Row="2" Style="{StaticResource Card}" Margin="0,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Content="✏️ Údaje účastníka" Style="{StaticResource ModernLabel}"
                       FontSize="15" FontWeight="Bold" Margin="0,0,0,15"/>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,0">
                                <Label Content="Meno a priezvisko *" Style="{StaticResource ModernLabel}"/>
                                <TextBox x:Name="TxtName" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                                <Label Content="Dátum narodenia" Style="{StaticResource ModernLabel}"/>
                                <DatePicker x:Name="DtpBirthDate" Style="{StaticResource ModernDatePicker}"
                                SelectedDateFormat="Short"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,0">
                                <Label Content="Registračné číslo" Style="{StaticResource ModernLabel}"/>
                                <TextBox x:Name="TxtRegistrationNumber" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Margin="0,0,0,0">
                                <Label Content="Poznámky" Style="{StaticResource ModernLabel}"/>
                                <TextBox x:Name="TxtNotes" Style="{StaticResource ModernTextBox}" 
                             Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>

        <Separator  Grid.Row="2" VerticalAlignment="Top" HorizontalContentAlignment="Stretch" Background="Gray" Margin="-30,0,-30,10" />

        <!-- Buttons -->
        <Border Grid.Row="2" Padding="25,15" Background="White" Margin="-25,0,-25,-10" >
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="🗑️ Odstrániť" Style="{StaticResource DangerButton}"
                            Click="Delete_Click"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="💾 Uložiť" Style="{StaticResource SuccessButton}"
                                Margin="0,0,10,0" Click="Save_Click"/>
                    <Button Content="🆕 Nový" Style="{StaticResource ModernButton}"
                                Margin="0,0,10,0" Click="New_Click"/>
                    <Button Content="👥 Vybrať všetkých" Style="{StaticResource ModernButton}"
                                FontWeight="Bold" Margin="0,0,10,0" Click="SelectAllAndClose_Click"/>
                    <Button Content="✓ Vybrať a zavrieť" Style="{StaticResource SuccessButton}"
                                FontWeight="Bold" IsDefault="True" Click="SelectAndClose_Click"
                                Margin="0,0,16,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
