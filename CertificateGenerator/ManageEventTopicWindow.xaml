<Window x:Class="CertificateGenerator.ManageEventTopicWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Správa tém podujatí" 
        Height="750" 
        MinHeight="380" 
        Width="700"
        MinWidth="680"
        FontSize="14"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="{StaticResource BackgroundColor}">

    <Grid Margin="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT SIDE: List of topics -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Style="{StaticResource Card}" 
                    Margin="0,0,0,20">
                <TextBlock Text="Uložené témy podujatí" 
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryColor}"
                           HorizontalAlignment="Center"/>
            </Border>

            <!-- Search Box -->
            <Border Grid.Row="1" 
                    Style="{StaticResource Card}" 
                    Margin="0,0,0,15">
                <StackPanel>
                    <Label Content="🔍 Vyhľadávanie:" 
                           Style="{StaticResource ModernLabel}"
                           FontWeight="Bold"
                           Margin="0,0,0,8"/>
                    <TextBox x:Name="TxtSearch" 
                             Style="{StaticResource ModernTextBox}"
                             TextChanged="TxtSearch_TextChanged"
                             ToolTip="Zadajte názov témy"/>
                </StackPanel>
            </Border>

            <!-- Topics List -->
            <Border Grid.Row="2" 
                    Style="{StaticResource Card}" 
                    Margin="0,0,0,20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0"
                           Content="Zoznam tém"
                           Style="{StaticResource ModernLabel}"
                           FontSize="15"
                           FontWeight="Bold"
                           Margin="0,0,0,15"/>

                    <Border Grid.Row="1"
                            BorderThickness="1"
                            BorderBrush="{StaticResource BorderColor}"
                            CornerRadius="6"
                            Background="{StaticResource SurfaceColor}">
                        <DataGrid x:Name="DgTopics"
                                  Style="{StaticResource ModernDataGrid}"
                                  BorderThickness="0"
                                  SelectionChanged="DgTopics_SelectionChanged"
                                  MouseDoubleClick="DgTopics_MouseDoubleClick">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Téma" 
                                                    Binding="{Binding Topic}" 
                                                    Width="*"/>
                                <DataGridTextColumn Header="Popis" 
                                                    Binding="{Binding Description}" 
                                                    Width="2*"/>
                                <DataGridTextColumn Header="Použité" 
                                                    Binding="{Binding UsageCount}" 
                                                    Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </Grid>
            </Border>

            <!-- Bottom Buttons -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Content="🗑️ Odstrániť" 
                        Style="{StaticResource DangerButton}"
                        FontSize="14"
                        Click="Delete_Click"/>

                <StackPanel Grid.Column="2"
                            Orientation="Horizontal">
                    <Button Content="✓ Vybrať" 
                            x:Name="BtnSelect"
                            Style="{StaticResource SuccessButton}"
                            FontSize="14"
                            FontWeight="Bold"
                            Margin="0,0,15,0"
                            IsDefault="True"
                            Click="Select_Click"/>
                    <Button Content="✖️ Zrušiť" 
                            Style="{StaticResource SecondaryButton}"
                            FontSize="14"
                            IsCancel="True"
                            Click="Cancel_Click"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- RIGHT SIDE: Add/Edit topic form -->
        <Border Grid.Column="2"
                Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Form Header -->
                <TextBlock Grid.Row="0"
                           x:Name="TxtFormTitle"
                           Text="Nová téma" 
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryColor}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Form Fields -->
                <StackPanel Grid.Row="1">
                    <Label Content="Názov témy *"
                           Style="{StaticResource ModernLabel}"
                           FontWeight="Bold"
                           Margin="0,0,0,8"/>
                    <TextBox x:Name="TxtTopicName"
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,20"
                             ToolTip="Povinné pole"/>

                    <Label Content="Popis"
                           Style="{StaticResource ModernLabel}"
                           FontWeight="Bold"
                           Margin="0,0,0,8"/>
                    <TextBox x:Name="TxtDescription"
                             Style="{StaticResource ModernTextBox}"
                             Height="150"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             ToolTip="Nepovinné"/>
                </StackPanel>

                <!-- Form Buttons -->
                <StackPanel Grid.Row="2"
                            Margin="0,20,0,0">
                    <Button Content="💾 Uložiť tému"
                            x:Name="BtnSave"
                            Style="{StaticResource ModernButton}"
                            FontSize="14"
                            FontWeight="Bold"
                            Margin="0,0,0,10"
                            Click="SaveTopic_Click"/>

                    <Button Content="🔄 Vyčistiť formulár"
                            x:Name="BtnClear"
                            Style="{StaticResource SecondaryButton}"
                            FontSize="13"
                            Click="ClearForm_Click"/>

                    <TextBlock x:Name="TxtEditMode"
                               Text="Režim úpravy"
                               Foreground="{StaticResource TextPrimaryColor}"
                               FontSize="12"
                               FontStyle="Italic"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"
                               Visibility="Collapsed"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
