<Window x:Class="CertificateGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Generátor certifikátov" 
        Height="750" 
        Width="1000"
        MinWidth="750"
        MinHeight="120"
        FontSize="14"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        ResizeMode="CanResize"
        Background="{StaticResource BackgroundColor}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MaxHeight="100"/>
            <RowDefinition Height="*" MaxHeight="1480"/>
            <RowDefinition Height="Auto" MaxHeight="48"/>
        </Grid.RowDefinitions>

        <!-- Top Menu Bar -->
        <Border Grid.Row="0"
        Background="{StaticResource SurfaceColor}"
        BorderBrush="{StaticResource BorderColor}"
        BorderThickness="0,0,0,1"
        Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Ľavá strana: ikona + názov + podnadpis -->
                <StackPanel Grid.Column="0"
                    Orientation="Vertical"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center">
                        <TextBlock Text="📜"
                           FontSize="26"
                           Margin="0,0,10,0"
                           VerticalAlignment="Center" />
                        <TextBlock Text="Certificate Generator"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryColor}"
                           VerticalAlignment="Center" />
                    </StackPanel>

                    <TextBlock Text="nástroj na vytváranie certifikátov o absolvovaní odborných školení"
                       FontSize="13"
                       Foreground="{StaticResource TextSecondaryColor}"
                       Margin="4,3,0,0"
                       TextWrapping="Wrap" />
                </StackPanel>

                <!-- Pravá strana: menu -->
                <Menu Grid.Column="1"
              Background="Transparent"
              Foreground="{StaticResource TextPrimaryColor}"
              HorizontalAlignment="Right"
              VerticalAlignment="Center">
                    <MenuItem Header="📖 O aplikácii"
                      Click="About_Click"
                      Padding="10,5" />
                    <MenuItem Header="🔒 Ochrana údajov"
                      Click="PrivacyPolicy_Click"
                      Padding="10,5" />
                </Menu>
            </Grid>
        </Border>

        
        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Padding="40,30">
            <StackPanel >

                <!-- Main Action - Certificate Generation -->
                <Border Style="{StaticResource Card}" 
                        Margin="0,0,0,20"
                        Background="{StaticResource InputBackground}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Icon -->
                        <Border Grid.Column="0"
                                Background="{StaticResource SuccessColor}"
                                CornerRadius="12"
                                Width="80"
                                Height="80"
                                Margin="0,0,25,0"
                                VerticalAlignment="Center">
                            <TextBlock Text="📦" 
                                       FontSize="42"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>

                        <!-- Content -->
                        <StackPanel Grid.Column="1"
                                    VerticalAlignment="Center">
                            <TextBlock Text="Vytvoriť certifikáty" 
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryColor}"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Generujte jeden alebo viacero certifikátov naraz. Import zo CSV súborov, rýchla tvorba pre celé skupiny účastníkov." 
                                       FontSize="13"
                                       Foreground="{StaticResource TextSecondaryColor}"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,15"/>
                            <Button Content="▶ Otvoriť generátor certifikátov" 
                                    Style="{StaticResource SuccessButton}"
                                    Width="280"
                                    Padding="2,15"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    HorizontalAlignment="Left"
                                    Click="OpenBulkGeneration_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Management Functions -->
                <TextBlock Text="Správa údajov" 
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryColor}"
                           Margin="0,10,0,15"/>

                <!-- Function Cards Grid -->
                <UniformGrid Columns="3" Rows="2" Margin="0,0,0,20">

                    <!-- Participants Management -->
                    <Border Style="{StaticResource Card}" 
                            Margin="0,0,10,10"
                            Cursor="Hand"
                            MouseLeftButtonDown="ManageParticipants_Click">
                        <StackPanel>
                            <TextBlock Text="👥" 
                                       FontSize="36"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="Správa účastníkov" 
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryColor}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Pridávajte, upravujte a spravujte údaje o účastníkoch školení" 
                                       FontSize="12"
                                       Foreground="{StaticResource TextSecondaryColor}"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Margin="0,0,0,15"/>
                            
                        </StackPanel>
                    </Border>

                    <!-- Organizers Management -->
                    <Border Style="{StaticResource Card}" 
                            Margin="5,0,5,10"
                            Cursor="Hand"
                            MouseLeftButtonDown="ManageOrganizers_Click">
                        <StackPanel>
                            <TextBlock Text="🏢" 
                                       FontSize="36"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="Správa organizátorov" 
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryColor}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Spravujte zoznam organizátorov podujatí a školení" 
                                       FontSize="12"
                                       Foreground="{StaticResource TextSecondaryColor}"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Margin="0,0,0,15"/>            
                            
                        </StackPanel>
                    </Border>

                    <!-- Template Editor -->
                    <Border Style="{StaticResource Card}" 
                            Margin="10,0,0,10"
                            Cursor="Hand"
                            MouseLeftButtonDown="OpenTemplateEditorBorder_Click">
                        <StackPanel>
                            <TextBlock Text="🎨" 
                                       FontSize="36"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="Editor šablón" 
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryColor}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Prispôsobte vzhľad certifikátov, farby, logo a rozloženie" 
                                       FontSize="12"
                                       Foreground="{StaticResource TextSecondaryColor}"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Margin="0,0,0,15"/>
                            
                        </StackPanel>
                    </Border>

                    <!-- Event Topics Management -->
                    <Border Style="{StaticResource Card}" 
                            Margin="0,10,10,0"
                            Cursor="Hand"
                            MouseLeftButtonDown="ManageEventTopics_Click">
                        <StackPanel>
                            <TextBlock Text="📋" 
                                       FontSize="36"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="Správa tém podujatí" 
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryColor}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Udržujte si zoznam tém odborných seminárov a školení" 
                                       FontSize="12"
                                       Foreground="{StaticResource TextSecondaryColor}"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Margin="0,0,0,15"/>
                            
                        </StackPanel>
                    </Border>

                    <!-- Certificate History -->
                    <Border Style="{StaticResource Card}" 
                            Margin="5,10,5,0"
                            Cursor="Hand"
                            MouseLeftButtonDown="CertificateHistory_Click">
                        <StackPanel>
                            <TextBlock Text="📊" 
                                       FontSize="36"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="História certifikátov" 
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryColor}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Prehľad všetkých vygenerovaných certifikátov a štatistiky" 
                                       FontSize="12"
                                       Foreground="{StaticResource TextSecondaryColor}"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Margin="0,0,0,15"/>
                            
                        </StackPanel>
                    </Border>

                    <!-- Quick Certificate Form Card -->
                    <Border Style="{StaticResource Card}" 
                            Margin="10,10,0,0">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                      MaxHeight="48">
                            <StackPanel>
                                <TextBlock Text="⚡" 
                                           FontSize="32"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,8"/>
                                <TextBlock Text="Rýchle vytvorenie" 
                                           FontSize="15"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TextPrimaryColor}"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,6"/>
                                <TextBlock Text="Vytvorte jeden certifikát" 
                                           FontSize="11"
                                           Foreground="{StaticResource TextSecondaryColor}"
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"
                                           Margin="0,0,0,12"/>

                                <!-- Compact Form -->
                                <StackPanel Margin="0,5,0,0">
                                    <!-- Organizer -->
                                    <Label Content="Organizátor:" 
                                           Style="{StaticResource ModernLabel}"
                                           FontSize="11"
                                           Margin="0,0,0,2"/>
                                    <TextBox x:Name="TxtEventOrganizer" 
                                             Style="{StaticResource ModernTextBox}"
                                             Height="28"
                                             FontSize="11"
                                             Padding="8,4"
                                             Margin="0,0,0,6">
                                        <TextBox.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="💾 Uložiť" Click="SaveOrganizer_Click"/>
                                                <Separator/>
                                                <MenuItem Header="📋 Vybrať" Click="BtnEventOrganizer_Click"/>
                                            </ContextMenu>
                                        </TextBox.ContextMenu>
                                    </TextBox>

                                    <!-- Event Topic -->
                                    <Label Content="Téma:" 
                                           Style="{StaticResource ModernLabel}"
                                           FontSize="11"
                                           Margin="0,0,0,2"/>
                                    <TextBox x:Name="TxtEventTopic" 
                                             Style="{StaticResource ModernTextBox}"
                                             Height="28"
                                             FontSize="11"
                                             Padding="8,4"
                                             Margin="0,0,0,6">
                                        <TextBox.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="💾 Uložiť" Click="SaveEventTopic_Click"/>
                                                <Separator/>
                                                <MenuItem Header="📋 Vybrať" Click="BtnEventTheme_Click"/>
                                            </ContextMenu>
                                        </TextBox.ContextMenu>
                                    </TextBox>

                                    <!-- Event Date -->
                                    <Label Content="Dátum podujatia:" 
                                           Style="{StaticResource ModernLabel}"
                                           FontSize="11"
                                           Margin="0,0,0,2"/>
                                    <DatePicker x:Name="DtpEventDate" 
                                                Style="{StaticResource ModernDatePicker}"
                                                Height="28"
                                                FontSize="11"
                                                SelectedDateFormat="Short"
                                                Margin="0,0,0,6"/>

                                    <!-- Participant Name -->
                                    <Label Content="👤 Účastník:" 
                                           Style="{StaticResource ModernLabel}"
                                           FontSize="11"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource PrimaryColor}"
                                           Margin="0,3,0,2"/>
                                    <TextBox x:Name="TxtParticipantName" 
                                             Style="{StaticResource ModernTextBox}"
                                             Height="28"
                                             FontSize="11"
                                             Padding="8,4"
                                             Background="{StaticResource InputBackground}"
                                             Margin="0,0,0,6">
                                        <TextBox.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="💾 Uložiť" Click="SaveParticipant_Click"/>
                                                <Separator/>
                                                <MenuItem Header="📋 Vybrať" Click="BtnParticipants_Click"/>
                                            </ContextMenu>
                                        </TextBox.ContextMenu>
                                    </TextBox>

                                    <!-- Birth Date -->
                                    <Label Content="Dátum narodenia:" 
                                           Style="{StaticResource ModernLabel}"
                                           FontSize="11"
                                           Margin="0,0,0,2"/>
                                    <DatePicker x:Name="DtpBirthDate" 
                                                Style="{StaticResource ModernDatePicker}"
                                                Height="28"
                                                FontSize="11"
                                                SelectedDateFormat="Short"
                                                Margin="0,0,0,6"/>

                                    <!-- Registration Number -->
                                    <Label Content="Reg. číslo:" 
                                           Style="{StaticResource ModernLabel}"
                                           FontSize="11"
                                           Margin="0,0,0,2"/>
                                    <TextBox x:Name="TxtRegistrationNumber" 
                                             Style="{StaticResource ModernTextBox}"
                                             Height="28"
                                             FontSize="11"
                                             Padding="8,4"
                                             Margin="0,0,0,6"/>

                                    <!-- Notes -->
                                    <Label Content="Poznámky:" 
                                           Style="{StaticResource ModernLabel}"
                                           FontSize="11"
                                           Margin="0,0,0,2"/>
                                    <TextBox x:Name="TxtNotes" 
                                             Style="{StaticResource ModernTextBox}"
                                             Height="50"
                                             FontSize="11"
                                             TextWrapping="Wrap" 
                                             AcceptsReturn="True"
                                             VerticalScrollBarVisibility="Auto"
                                             Padding="8,4"
                                             Margin="0,0,0,6"/>

                                    <!-- Paper Format -->
                                    <Label Content="Formát:" 
                                           Style="{StaticResource ModernLabel}"
                                           FontSize="11"
                                           Margin="0,0,0,2"/>
                                    <ComboBox x:Name="CmbPaperFormat"
                                              Style="{StaticResource ModernComboBox}"
                                              Height="28"
                                              FontSize="11"
                                              SelectedIndex="2"
                                              Margin="0,0,0,10">
                                        <ComboBoxItem Content="A3"/>
                                        <ComboBoxItem Content="A4"/>
                                        <ComboBoxItem Content="A5"/>
                                    </ComboBox>

                                    <!-- Action Buttons -->
                                    <StackPanel Orientation="Horizontal" 
                                                HorizontalAlignment="Center"
                                                Margin="0,5,0,0">
                                        <Button Content="🗑️" 
                                                ToolTip="Vyčistiť"
                                                Style="{StaticResource SecondaryButton}"
                                                Width="60"
                                                Height="28"
                                                FontSize="14"
                                                Margin="0,0,6,0" 
                                                Click="ClearForm_Click"/>
                                        <Button Content="📄 PDF" 
                                                ToolTip="Generuj PDF"
                                                Style="{StaticResource SuccessButton}"
                                                Width="100"
                                                FontSize="11"
                                                Click="GeneratePdf_Click"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>

                </UniformGrid>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2"
                Background="{StaticResource InputBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,1,0,0"
                Padding="30,15">
            <TextBlock Text="© 2025 Rudolf Mendzezof. Všetky práva vyhradené." 
                       FontSize="12"
                       Foreground="{StaticResource TextSecondaryColor}"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
