<Window x:Class="CertificateGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Generátor certifikátov" 
        MinWidth="750"
        MinHeight="120"
        FontSize="14"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        ResizeMode="CanResize"
        Background="{StaticResource BackgroundColor}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Top Menu Bar -->
        <Border x:Name="BorderOnTop" Grid.Row="0"
        Background="{StaticResource SurfaceColor}"
        BorderBrush="{StaticResource BorderColor}"
        BorderThickness="0,0,0,1"
        Padding="20,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Notifikačná lišta pre cudzie databázy -->
                <Border x:Name="DatabaseNotificationBar" Grid.Row="0"
                        Background="#FFF3CD"
                        BorderBrush="#FFC107"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="15,10"
                        Margin="0,0,0,10"
                        Visibility="Collapsed">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="⚠️" FontSize="18" Margin="0,0,10,0" VerticalAlignment="Center" />

                        <TextBlock x:Name="DatabaseNotificationText" Grid.Column="1"
                                   Text="Boli detekované databázy z iných počítačov."
                                   FontSize="13"
                                   Foreground="#856404"
                                   VerticalAlignment="Center"
                                   TextWrapping="Wrap" />

                        <Button Grid.Column="2"
                                Content="Zlúčiť teraz"
                                Click="MergeDatabases_Click"
                                Padding="10,5"
                                Margin="10,0,5,0"
                                Background="#FFC107"
                                BorderBrush="#FFA000"
                                Foreground="White"
                                FontWeight="Bold"
                                Cursor="Hand" />

                        <Button Grid.Column="3"
                                Content="✕"
                                Click="CloseNotification_Click"
                                Padding="8,5"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="#856404"
                                FontSize="16"
                                FontWeight="Bold"
                                Cursor="Hand"
                                ToolTip="Zavrieť oznámenie" />
                    </Grid>
                </Border>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Ľavá strana: ikona + názov + podnadpis -->
                    <StackPanel Grid.Column="0"
                    Orientation="Vertical"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center">
                            <TextBlock Text="📜"
                           FontSize="26"
                           Margin="0,0,10,0"
                           VerticalAlignment="Center" />
                            <TextBlock Text="Certificate Generator"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryColor}"
                           VerticalAlignment="Center" />
                        </StackPanel>

                        <TextBlock Text="nástroj na vytváranie certifikátov o absolvovaní odborných školení"
                       FontSize="13"
                       Foreground="{StaticResource TextSecondaryColor}"
                       Margin="4,3,0,0"
                       TextWrapping="Wrap" />
                    </StackPanel>

                    <!-- Pravá strana: menu s modernými štýlmi -->
                    <Menu Grid.Column="1"
      Background="Transparent"
      HorizontalAlignment="Right"
      VerticalAlignment="Center">

                        <!-- Databázové menu -->
                        <MenuItem Header="💾 Databáza"
              Style="{StaticResource ModernMenuItem}">
                            <MenuItem Header="📂 Otvoriť priečinok s databázami" 
                  Click="OpenDatabaseFolder_Click"
                  Style="{StaticResource ModernMenuItem}" />

                            <Separator Style="{StaticResource ModernMenuSeparator}"/>

                            <MenuItem Header="📤 Exportovať databázu..." 
                  Click="ExportDatabase_Click"
                  Style="{StaticResource ModernMenuItem}" />

                            <MenuItem Header="📥 Importovať databázu..." 
                  Click="ImportDatabase_Click"
                  Style="{StaticResource ModernMenuItem}" />

                            <Separator Style="{StaticResource ModernMenuSeparator}"/>

                            <MenuItem Header="🔀 Zlúčiť databázy..." 
                  Click="MergeDatabases_Click"
                  ToolTip="Zlúči všetky databázy z rôznych počítačov do jednej"
                  Style="{StaticResource ModernMenuItem}" />

                            <Separator Style="{StaticResource ModernMenuSeparator}"/>

                            <MenuItem Header="ℹ️ Informácie o databáze" 
                  Click="ShowDatabaseInfo_Click"
                  Style="{StaticResource ModernMenuItem}" />
                        </MenuItem>

                        <MenuItem Header="📖 O aplikácii"
              Click="About_Click"
              Style="{StaticResource ModernMenuItem}" />

                        <MenuItem Header="🔒 Ochrana údajov"
              Click="PrivacyPolicy_Click"
              Style="{StaticResource ModernMenuItem}" />
                    </Menu>

                </Grid>
            </Grid>
        </Border>



        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Padding="25,18">
            <StackPanel >

                <!-- Main Action - Certificate Generation -->
                <Border Style="{StaticResource Card}" 
                        Margin="0,0,0,20"   Cursor="Hand"
                        Background="{StaticResource InputBackground}"
                        MouseLeftButtonDown="OpenBulkGeneration_Click">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Icon -->
                        <Border Grid.Column="0"
                                Margin="0,0,25,0"
                                VerticalAlignment="Stretch">

                            <StackPanel Orientation="Vertical" VerticalAlignment="Stretch"   Width="120" Height="120">
                                <Image x:Name="picture_papers_in_package" 
                                    Source="..\Images\papers_in_package.png"/>
                            </StackPanel>
                        </Border>

                        <!-- Content -->
                        <StackPanel Grid.Column="1"
                                    VerticalAlignment="Center" HorizontalAlignment="Stretch">
                            <TextBlock Text="Vytvoriť certifikáty" 
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryColor}"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Generujte jeden alebo viacero certifikátov naraz. Import zo CSV súborov, rýchla tvorba pre celé skupiny účastníkov." 
                                       FontSize="13"
                                       Foreground="{StaticResource TextSecondaryColor}"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,15"/>

                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Function Cards Grid -->
                <UniformGrid Columns="3" Rows="2" Margin="0,0,0,20">

                    <!-- Participants Management -->
                    <Border Style="{StaticResource Card}" 
                            Margin="0,0,10,10"
                            Cursor="Hand"
                            MouseLeftButtonDown="ManageParticipants_Click">
                        <StackPanel>

                            <Image Source="..\Images\users_symbol_trsp.png"
                                    Width="60"  Cursor="Hand"/>
                            <TextBlock Text="Správa účastníkov" 
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryColor}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Pridávajte, upravujte a spravujte údaje o účastníkoch školení" 
                                       FontSize="12"
                                       Foreground="{StaticResource TextSecondaryColor}"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Margin="0,0,0,15"/>

                        </StackPanel>
                    </Border>

                    <!-- Organizers Management -->
                    <Border Style="{StaticResource Card}" 
                            Margin="5,0,5,10"
                            Cursor="Hand"
                            MouseLeftButtonDown="ManageOrganizers_Click">
                        <StackPanel>
                            
                            <Image Source="..\Images\teacher_symbol-trsp.png"
                                   Width="60"  />
                            <TextBlock Text="Správa organizátorov" 
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryColor}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Spravujte zoznam organizátorov podujatí a školení" 
                                       FontSize="12"
                                       Foreground="{StaticResource TextSecondaryColor}"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Margin="0,0,0,15"/>

                        </StackPanel>
                    </Border>

                    <!-- Template Editor -->
                    <Border Style="{StaticResource Card}" 
                            Margin="10,0,0,10"
                            Cursor="Hand"
                            MouseLeftButtonDown="OpenTemplateEditorBorder_Click">
                        <StackPanel>
                            <TextBlock Text="🎨" 
                                       FontSize="36"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="Editor šablón" 
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryColor}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Prispôsobte vzhľad certifikátov, farby, logo a rozloženie" 
                                       FontSize="12"
                                       Foreground="{StaticResource TextSecondaryColor}"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Margin="0,0,0,15"/>

                        </StackPanel>
                    </Border>

                    <!-- Event Topics Management -->
                    <Border Style="{StaticResource Card}" 
                            Margin="0,10,10,0"
                            Cursor="Hand"
                            MouseLeftButtonDown="ManageEventTopics_Click">
                        <StackPanel>
                            <TextBlock Text="📋" 
                                       FontSize="36"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="Správa tém podujatí" 
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryColor}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Udržujte si zoznam tém odborných seminárov a školení" 
                                       FontSize="12"
                                       Foreground="{StaticResource TextSecondaryColor}"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Margin="0,0,0,15"/>

                        </StackPanel>
                    </Border>

                    <!-- Certificate History -->
                    <Border Style="{StaticResource Card}" 
                            Margin="5,10,5,0"
                            Cursor="Hand"
                            MouseLeftButtonDown="CertificateHistory_Click">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Image Source="..\Images\three_certificates-trsp.png"
                                    Width="60"  Cursor="Hand"/>
                                <Image Source="..\Images\three_certificates-trsp.png"
                                    Width="60"  Cursor="Hand"/>
                            </StackPanel>
                            <TextBlock Text="História certifikátov" 
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryColor}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Prehľad všetkých vygenerovaných certifikátov a štatistiky" 
                                       FontSize="12"
                                       Foreground="{StaticResource TextSecondaryColor}"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Margin="0,0,0,15"/>

                        </StackPanel>
                    </Border>

                    <!-- Quick Certificate Form Card -->
                    <Border Style="{StaticResource Card}" 
                            Margin="10,10,0,0"   Cursor="Hand"
                            MouseLeftButtonDown="QuickGeneratePdf_Click">
                        <StackPanel>
                            <TextBlock Text="⚡" 
                                    FontSize="32"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,8"/>
                            <TextBlock Text="Rýchle vytvorenie" 
                                    FontSize="15"
                                    FontWeight="Bold"
                                    Foreground="{StaticResource TextPrimaryColor}"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,6"/>
                            <TextBlock Text="Vytvorte jeden certifikát" 
                                    FontSize="11"
                                    Foreground="{StaticResource TextSecondaryColor}"
                                    TextWrapping="Wrap"
                                    TextAlignment="Center"
                                    Margin="0,0,0,12"/>
                        </StackPanel>
                    </Border>

                </UniformGrid>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2"
                Background="{StaticResource InputBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,1,0,0"
                Padding="30,15">
            <TextBlock Text="© 2025 Rudolf Mendzezof. Všetky práva vyhradené." 
                       FontSize="12"
                       Foreground="{StaticResource TextSecondaryColor}"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
