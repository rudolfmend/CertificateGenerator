<Window x:Class="CertificateGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Generátor certifikátov" 
        Height="750" 
        Width="1000"
        MinHeight="1900"
        MinWidth="900"
        FontSize="14"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="{StaticResource BackgroundColor}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Menu Bar -->
        <Border Grid.Row="0"
        Background="{StaticResource SurfaceColor}"
        BorderBrush="{StaticResource BorderColor}"
        BorderThickness="0,0,0,1"
        Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Ľavá strana: ikona + názov + podnadpis -->
                <StackPanel Grid.Column="0"
                    Orientation="Vertical"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center">
                        <TextBlock Text="📜"
                           FontSize="26"
                           Margin="0,0,10,0"
                           VerticalAlignment="Center" />
                        <TextBlock Text="Certificate Generator"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryColor}"
                           VerticalAlignment="Center" />
                    </StackPanel>

                    <TextBlock Text="nástroj na vytváranie certifikátov o absolvovaní odborných školení"
                       FontSize="13"
                       Foreground="{StaticResource TextSecondaryColor}"
                       Margin="4,3,0,0"
                       TextWrapping="Wrap" />
                </StackPanel>

                <!-- Pravá strana: menu -->
                <Menu Grid.Column="1"
              Background="Transparent"
              Foreground="{StaticResource TextPrimaryColor}"
              HorizontalAlignment="Right"
              VerticalAlignment="Center">
                    <MenuItem Header="📖 O aplikácii"
                      Click="About_Click"
                      Padding="10,5" />
                    <MenuItem Header="🔒 Ochrana údajov"
                      Click="PrivacyPolicy_Click"
                      Padding="10,5" />
                </Menu>
            </Grid>
        </Border>

        
        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Padding="40,30">
            <StackPanel MaxWidth="900">

                <!-- Main Action - Certificate Generation -->
                <Border Style="{StaticResource Card}" 
                        Margin="0,0,0,20"
                        Background="{StaticResource InputBackground}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Icon -->
                        <Border Grid.Column="0"
                                Background="{StaticResource SuccessColor}"
                                CornerRadius="12"
                                Width="80"
                                Height="80"
                                Margin="0,0,25,0"
                                VerticalAlignment="Center">
                            <TextBlock Text="📦" 
                                       FontSize="42"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>

                        <!-- Content -->
                        <StackPanel Grid.Column="1"
                                    VerticalAlignment="Center">
                            <TextBlock Text="Vytvoriť certifikáty" 
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryColor}"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Generujte jeden alebo viacero certifikátov naraz. Import zo CSV súborov, rýchla tvorba pre celé skupiny účastníkov." 
                                       FontSize="13"
                                       Foreground="{StaticResource TextSecondaryColor}"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,15"/>
                            <Button Content="▶ Otvoriť generátor certifikátov" 
                                    Style="{StaticResource SuccessButton}"
                                    Width="280"
                                    Height="44"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    HorizontalAlignment="Left"
                                    Click="OpenBulkGeneration_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Management Functions -->
                <TextBlock Text="Správa údajov" 
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryColor}"
                           Margin="0,10,0,15"/>

                <!-- Function Cards Grid -->
                <UniformGrid Columns="2" 
                             Rows="2">

                    <!-- Participants Management -->
                    <Border Style="{StaticResource Card}" 
                            Margin="0,0,10,10"
                            Cursor="Hand"
                            MouseLeftButtonDown="ManageParticipants_Click">

                        <StackPanel>
                            <TextBlock Text="👥" 
                                       FontSize="36"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="Správa účastníkov" 
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryColor}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Pridávajte, upravujte a spravujte údaje o účastníkoch školení" 
                                       FontSize="12"
                                       Foreground="{StaticResource TextSecondaryColor}"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Margin="0,0,0,15"/>
                            <Button Content="Otvoriť" 
                                    Style="{StaticResource ModernButton}"
                                    Width="120"
                                    Height="36"
                                    FontSize="13"
                                    HorizontalAlignment="Center"
                                    Click="ManageParticipants_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Organizers Management -->
                    <Border Style="{StaticResource Card}" 
                            Margin="10,0,0,10"
                            Cursor="Hand"
                            MouseLeftButtonDown="ManageOrganizers_Click">
                        <StackPanel>
                            <TextBlock Text="🏢" 
                                       FontSize="36"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="Správa organizátorov" 
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryColor}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Spravujte zoznam organizátorov podujatí a školení" 
                                       FontSize="12"
                                       Foreground="{StaticResource TextSecondaryColor}"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Margin="0,0,0,15"/>
                            <Button Content="Otvoriť" 
                                    Style="{StaticResource ModernButton}"
                                    Width="120"
                                    Height="36"
                                    FontSize="13"
                                    HorizontalAlignment="Center"
                                    Click="ManageOrganizers_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Event Topics Management -->
                    <Border Style="{StaticResource Card}" 
                            Margin="0,10,10,0"
                            Cursor="Hand"
                            MouseLeftButtonDown="ManageEventTopics_Click">

                        <StackPanel>
                            <TextBlock Text="📋" 
                                       FontSize="36"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="Správa tém podujatí" 
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryColor}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Udržujte si zoznam tém odborných seminárov a školení" 
                                       FontSize="12"
                                       Foreground="{StaticResource TextSecondaryColor}"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Margin="0,0,0,15"/>
                            <Button Content="Otvoriť" 
                                    Style="{StaticResource ModernButton}"
                                    Width="120"
                                    Height="36"
                                    FontSize="13"
                                    HorizontalAlignment="Center"
                                    Click="ManageEventTopics_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Certificate History -->
                    <Border Style="{StaticResource Card}" 
                            Margin="10,10,0,0"
                            Cursor="Hand"
                            MouseLeftButtonDown="CertificateHistory_Click">

                        <StackPanel>
                            <TextBlock Text="📊" 
                                       FontSize="36"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="História certifikátov" 
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryColor}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Prehľad všetkých vygenerovaných certifikátov a štatistiky" 
                                       FontSize="12"
                                       Foreground="{StaticResource TextSecondaryColor}"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Margin="0,0,0,15"/>
                            <Button Content="Otvoriť" 
                                    Style="{StaticResource ModernButton}"
                                    Width="120"
                                    Height="36"
                                    FontSize="13"
                                    HorizontalAlignment="Center"
                                    Click="CertificateHistory_Click"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource Card}" 
                            Margin="10,10,0,0"
                            Cursor="Hand">
                        <StackPanel>


                            <!-- Input Fields Section -->
                            <Border Grid.Row="2" 
                                    Style="{StaticResource Card}" 
                                    Margin="0,0,0,20">
                                <StackPanel>
                                    <Label Content="📝 Údaje o podujatí"
                                           Style="{StaticResource ModernLabel}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Margin="0,0,0,15"/>

                                    <!-- Organizer with Context Menu -->
                                    <Label Content="Organizátor:" Style="{StaticResource ModernLabel}"/>
                                    <TextBox x:Name="TxtEventOrganizer" 
                             Style="{StaticResource ModernTextBox}" 
                             Margin="0,0,0,5">
                                        <TextBox.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="💾 Uložiť ako nový záznam" Click="SaveOrganizer_Click"/>
                                                <Separator/>
                                                <MenuItem Header="📋 Vybrať uložený" Click="BtnEventOrganizer_Click"/>
                                            </ContextMenu>
                                        </TextBox.ContextMenu>
                                    </TextBox>
                                    <Button x:Name="BtnEventOrganizer" 
                            Content="📋 Vybrať uložené" 
                            Style="{StaticResource SecondaryButton}"
                            Height="32"
                            Padding="12,6"
                            FontSize="13"
                            Margin="0,0,0,20"
                            Click="BtnEventOrganizer_Click"/>

                                    <!-- Event Topic with Context Menu -->
                                    <Label Content="Téma podujatia:" Style="{StaticResource ModernLabel}"/>
                                    <TextBox x:Name="TxtEventTopic" 
                             Style="{StaticResource ModernTextBox}" 
                             Margin="0,0,0,5">
                                        <TextBox.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="💾 Uložiť ako nový záznam" Click="SaveEventTopic_Click"/>
                                                <Separator/>
                                                <MenuItem Header="📋 Vybrať uloženú" Click="BtnEventTheme_Click"/>
                                            </ContextMenu>
                                        </TextBox.ContextMenu>
                                    </TextBox>
                                    <Button x:Name="BtnEventTheme" 
                            Content="📋 Vybrať uložené" 
                            Style="{StaticResource SecondaryButton}"
                            Height="32"
                            Padding="12,6"
                            FontSize="13"
                            Margin="0,0,0,20"
                            Click="BtnEventTheme_Click"/>

                                    <!-- Event Date -->
                                    <Label Content="Dátum podujatia:" Style="{StaticResource ModernLabel}"/>
                                    <DatePicker x:Name="DtpEventDate" 
                                Style="{StaticResource ModernDatePicker}"
                                DisplayDateStart="01/01/2020"
                                DisplayDateEnd="12/31/2030"
                                SelectedDateFormat="Short"
                                Margin="0,0,0,20"/>

                                    <Separator Margin="0,5,0,20" Background="{StaticResource BorderColor}"/>

                                    <!-- Participant Name with Context Menu -->
                                    <Label Content="👤 Meno účastníka:" 
                           Style="{StaticResource ModernLabel}" 
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryColor}"/>
                                    <TextBox x:Name="TxtParticipantName" 
                             Style="{StaticResource ModernTextBox}"
                             Background="{StaticResource InputBackground}"
                             Margin="0,0,0,5">
                                        <TextBox.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="💾 Uložiť ako nový záznam" Click="SaveParticipant_Click"/>
                                                <Separator/>
                                                <MenuItem Header="📋 Vybrať uloženého" Click="BtnParticipants_Click"/>
                                            </ContextMenu>
                                        </TextBox.ContextMenu>
                                    </TextBox>
                                    <Button x:Name="BtnParticipants" 
                            Content="📋 Vybrať uložené" 
                            Style="{StaticResource SecondaryButton}"
                            Height="32"
                            Padding="12,6"
                            FontSize="13"
                            Margin="0,0,0,20"
                            Click="BtnParticipants_Click"/>

                                    <!-- Birth Date -->
                                    <Label Content="Dátum narodenia:" Style="{StaticResource ModernLabel}"/>
                                    <DatePicker x:Name="DtpBirthDate" 
                                Style="{StaticResource ModernDatePicker}"
                                SelectedDateFormat="Short"
                                Margin="0,0,0,15"/>

                                    <!-- Registration Number -->
                                    <Label Content="Registračné číslo v komore:" Style="{StaticResource ModernLabel}"/>
                                    <TextBox x:Name="TxtRegistrationNumber" 
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,15"/>

                                    <!-- Notes -->
                                    <Label Content="Poznámky:" Style="{StaticResource ModernLabel}"/>
                                    <TextBox x:Name="TxtNotes" 
                             Style="{StaticResource ModernTextBox}"
                             Height="100" 
                             TextWrapping="Wrap" 
                             AcceptsReturn="True" 
                             VerticalScrollBarVisibility="Auto"
                             VerticalAlignment="Stretch"
                             Padding="12,10"/>
                                </StackPanel>
                            </Border>

                            <!-- Action Buttons Section -->
                            <StackPanel Grid.Row="3">
                                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="0,0,0,15">
                                    <Button Content="🗑️ Vyčistiť" 
                            Style="{StaticResource SecondaryButton}"
                            Width="130" 
                            Height="44"
                            FontSize="14"
                            Margin="0,0,10,0" 
                            Click="ClearForm_Click"/>
                                    <Button Content="📄 Generuj PDF" 
                            Style="{StaticResource SuccessButton}"
                            Width="180" 
                            Height="44"
                            FontSize="14"
                            Click="GeneratePdf_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                </UniformGrid>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2"
                Background="{StaticResource InputBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,1,0,0"
                Padding="30,15">
            <TextBlock Text="© 2025 Rudolf Mendzezof. Všetky práva vyhradené." 
                       FontSize="12"
                       Foreground="{StaticResource TextSecondaryColor}"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
